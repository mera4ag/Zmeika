<Menu>:
    canvas:
        Color:
            rgba: (1, 1, 0, 1)
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:       
        orientation:'vertical'
        spacing:'50dp'
        padding:'30dp'
        Label:
            text: 'HELLO KIVY!!!!'
            font_size: '30sp'
        TextInput:
            multiline: False
            focus: True
            font_size: '30sp'
        Button:
            text: 'Button'
            size_hint: 0.5, 0.4
            pos_hint: {'center_x': 0.5,'center_y': 0.5}
            on_press: root.manager.current = 'game'

<Game>:
    Label:
        text: 'Second Screen'